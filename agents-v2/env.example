# Guardian AI v2 - Vertex AI Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Google Cloud Project Configuration
# =============================================================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# =============================================================================
# Vertex AI Configuration
# =============================================================================
VERTEX_AI_ENDPOINT_ID=
VERTEX_AI_MODEL_NAME=gemini-2.0-flash-exp
VERTEX_AI_LOCATION=us-central1

# =============================================================================
# Google Cloud Authentication
# =============================================================================
# Option 1: Service Account Key (JSON file path)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Use Application Default Credentials (ADC)
# Leave GOOGLE_APPLICATION_CREDENTIALS empty if using ADC
# Run: gcloud auth application-default login

# =============================================================================
# Google API Keys (for Gemini API if needed)
# =============================================================================
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# Docker & Container Registry
# =============================================================================
GCP_ARTIFACT_REGISTRY_REPO=guardian-ai
GCP_ARTIFACT_REGISTRY_LOCATION=us-central1
IMAGE_NAME=guardian-agents-v2
IMAGE_TAG=latest

# Full image path will be: {LOCATION}-docker.pkg.dev/{PROJECT_ID}/{REPO}/{IMAGE_NAME}:{TAG}
# Example: us-central1-docker.pkg.dev/my-project/guardian-ai/guardian-agents-v2:latest

# =============================================================================
# Vertex AI Model Deployment Settings
# =============================================================================
VERTEX_AI_MACHINE_TYPE=n1-standard-4
VERTEX_AI_MIN_REPLICAS=1
VERTEX_AI_MAX_REPLICAS=3
VERTEX_AI_TRAFFIC_SPLIT=100

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
ENABLE_LOGGING=true
MAX_WORKERS=4
PORT=3000
HOST=0.0.0.0

# =============================================================================
# Optional: Cloud Storage (for model artifacts, logs, etc.)
# =============================================================================
GCS_BUCKET_NAME=guardian-ai-artifacts
GCS_BUCKET_PATH=agents-v2

# =============================================================================
# Optional: Monitoring & Observability
# =============================================================================
ENABLE_MONITORING=true
ENABLE_TRACING=true

# =============================================================================
# Security Settings
# =============================================================================
# Set to true to enable additional security checks
ENABLE_SECURITY_CHECKS=true

